# --- MOznoDS Configuration ---
# 1. Server Domain (Crucial for frontend build and WebRTC)
DOMAIN=your-domain.lhr.life

# 2. Security & Credentials
DEBUG=False
SECRET_KEY=your-secret-key
TURN_SECRET=your-turn-auth-secret-here  # Use a complex password!

# 3. Network & Django Backend
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://your-domain.lhr.life
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True

# 4. Storage & Performance
USE_SQLITE=1
USE_INMEMORY_CHANNELS=1
DATABASE_URL=sqlite:///db.sqlite3

# 5. Static & Media
STATIC_URL=/static/
STATIC_ROOT=/root/moznods/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/root/moznods/media

# 6. Registration Settings
REGISTRATION_INVITE_CODE=moznods

